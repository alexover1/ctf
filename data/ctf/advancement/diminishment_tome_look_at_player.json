{
    "criteria": {
        "requirement": {
            "trigger": "minecraft:tick",
            "conditions": {
                "player": {
                    "type_specific": {
                        "type": "minecraft:player",
                        "looking_at": {
                            "type": "minecraft:player",
                            "distance": {
                                "absolute": {
                                    "min": 0.1,
                                    "max": 30
                                }
                            }
                        }
                    },
                    "equipment": {
                        "mainhand": {
                            "predicates": {
                                "minecraft:custom_data": {
                                    "CTF.DiminishmentTome": true
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "rewards": {
        "function": "ctf:ability/diminishment_tome/look_at_player"
    }
}
